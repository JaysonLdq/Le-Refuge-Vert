    <table class="table">
        <thead>
            <tr>
                <th>Price</th>
                <th>Logement</th>
                <th>Saison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td>{{ tarif.price }}â‚¬</td>
                <!-- Affiche le label du logement -->
